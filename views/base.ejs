<%-include('header')-%>
<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title">
            <h2 class="font-weight-bold text-white">Login System</h2>
            <span class="text-white">Login for the existing user</span>
            <% if (locals.logout) { %>
                <div id="logout" class="text-success text-center px-0 py-0 my-2">
                    <%= logout %>
                </div>
            <% } %>
            <% if (locals.failed) { %>
                <div class="text-danger text-center px-0 py-0 my-2">
                    <%= locals.failed %>
                </div>
            <% } %>
        </div>
        <form action="/login" method="POST" class="pt-3">
            <div class="form-group">
                <input type="email" class="form-control" placeholder="Email" name="email">
                <!-- <small class="form-text text-muted text-left">Register email</small> -->
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="Password" name="password">
            </div>
            <button type="submit" class="btn btn-success rounded-pill" >submit</button>
        </form>
    </div>
</div>



<%-include('footer')-%>